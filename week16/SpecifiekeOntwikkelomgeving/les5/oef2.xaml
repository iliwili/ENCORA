<Window x:Class="les5.oef2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:les5"
        mc:Ignorable="d"
        Title="oef2" Height="450" Width="800">
    <StackPanel>
        <ListBox x:Name="listBox" Margin="40, 40, 40, 0" Height="150" SelectionChanged="select_Changed">
        </ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10,0, 0">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="20,0,20,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBox x:Name="textMerk" FontSize="16" Width="150"></TextBox>
            <TextBox x:Name="textModel" FontSize="16" Width="150"></TextBox>
            <TextBox x:Name="textJaar" FontSize="16" Width="150"></TextBox>
            
        </StackPanel>
    </StackPanel>
</Window>
